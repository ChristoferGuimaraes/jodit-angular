{
  "name": "jodit-angular",
  "version": "1.12.0",
  "description": "Angular Jodit Component",
  "main": "index.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "package": "ng build jodit-angular-lib --configuration production",
    "public": "npm publish dist/jodit-angular-lib",
    "newversion": "rm -rf dist/ && cd ./projects/jodit-angular-lib && npm version patch --no-git-tag-version && cd ../../ && npm version patch --no-git-tag-version && npm run package && npm run github && npm run public",
    "github": "git add --all && git commit -m \"$npm_package_version\" && git tag $npm_package_version && git push --tags origin HEAD:v12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jodit/jodit-angular.git"
  },
  "keywords": [
    "angular2",
    "angular4",
    "angular5",
    "ng2",
    "ng4",
    "ng5",
    "jodit",
    "html",
    "text",
    "editor",
    "wysisyg",
    "rich editor",
    "rich text editor",
    "rte",
    "javascript"
  ],
  "author": "Chupurnov Valeriy <chupurnov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jodit/jodit-angular/issues"
  },
  "homepage": "https://github.com/jodit/jodit-angular#readme",
  "dependencies": {
    "@angular/animations": "^12.2.7",
    "@angular/common": "^12.2.7",
    "@angular/compiler": "^12.2.7",
    "@angular/core": "^12.2.7",
    "@angular/forms": "^12.2.7",
    "@angular/platform-browser": "^12.2.7",
    "@angular/platform-browser-dynamic": "^12.2.7",
    "@angular/router": "^12.2.7",
    "core-js": "^3.18.1",
    "jodit": "^3.7.2",
    "rxjs": "^6.6.7",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.7",
    "@angular/cli": "12.2.7",
    "@angular/compiler-cli": "^12.2.7",
    "@angular/language-service": "^12.2.7",
    "@types/jasmine": "~3.9.1",
    "@types/jasminewd2": "^2.0.10",
    "@types/node": "^12.20.27",
    "codelyzer": "^6.0.2",
    "jasmine-core": "~3.9.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "ng-packagr": "^12.2.2",
    "protractor": "~7.0.0",
    "ts-node": "^10.2.1",
    "tslint": "~6.1.3",
    "typescript": "~4.3.5"
  }
}
